        </div>
        <div class="col">
          <div class="form-check">
            <%= f.check_box :other_special_abilities, { multiple: true, class: "form-check-input pawa-checkbox-g", id: "hirosimakiller" }, "広島キラー", nil %>
            <%= f.label :other_special_abilities, "広島キラー", class: "form-check-label pawa-text-good fw-bold", for: "hirosimakiller" %>
