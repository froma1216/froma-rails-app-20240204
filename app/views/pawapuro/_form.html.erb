      <%# ３行目 %>
      <div class="row">
        <div class="col">
          <div class="form-check">
            <%= f.check_box :other_special_abilities, { multiple: true, class: "form-check-input pawa-checkbox-g", id: "kokusaitaikaimaru" }, "国際大会◯", nil %>
