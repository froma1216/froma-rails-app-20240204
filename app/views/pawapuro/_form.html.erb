<%# NOTE: https://qiita.com/snskOgata/items/44d32a06045e6a52d11c %>
<%= form_with model: @player, url: @player.new_record? ? pawapuro_index_path : pawapuro_path(@player), local: true do |f| %>
  <form class="mb-3">
    <%# プロフィール %>
    <div class="h4 pb-2 mb-2 text-primary border-bottom border-primary">
      プロフィール
    </div>
    <div class="row">
      <%# 名字 %>
      <div class="col-6">
        <%= f.label :last_name, "姓", class: "form-label" %><span class="badge bg-danger ms-1">必須</span>
        <%= f.text_field :last_name, class: "form-control", placeholder: "佐藤", autocomplete: "name" %>
      </div>
      <%# 名前 %>
      <div class="col-6">
        <%= f.label :first_name, "名", class: "form-label" %><span class="badge bg-danger ms-1">必須</span>
        <%= f.text_field :first_name, class: "form-control", placeholder: "太郎", autocomplete: "name" %>
      </div>
    </div>
    <%# 選手名 %>
    <div>
      <%= f.label :player_name, "選手名", class: "form-label" %><span class="badge bg-danger ms-1">必須</span>
      <%= f.text_field :player_name, class: "form-control", placeholder: "佐藤太", autocomplete: "name" %>
    </div>
    <div class="row">
      <%# 背ネーム %>
      <div class="col-6">
        <%= f.label :back_name, "背ネーム", class: "form-label" %>
        <%= f.text_field :back_name, class: "form-control", placeholder: "SATO", autocomplete: "name" %>
      </div>
      <%# 生年月日 %>
      <div class="col-6">
        <%= f.label :birthday, "生年月日", class: "pt-2 pr-2" %>
        <%= f.date_field :birthday, class: "form-control" %>
      </div>
    </div>
    <%# 投打 %>
    <div>
      <%= f.label :throws, "投打", class: "form-label" %>
      <div class="mb-3">
        <div class="form-check form-check-inline">
          <%= f.radio_button :throws, "right", class: "form-check-input", checked: true %>
          <%= f.label :throws_right, "右投げ" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :throws, "left", class: "form-check-input" %>
          <%= f.label :throws_left, "左投げ" %>
        </div>
      </div>
      <div class="mb-3">
        <div class="form-check form-check-inline">
          <%= f.radio_button :bats, "right", class: "form-check-input", checked: true %>
          <%= f.label :bats_right, "右打ち" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :bats, "left", class: "form-check-input" %>
          <%= f.label :bats_left, "左打ち" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :bats, "both", class: "form-check-input" %>
          <%= f.label :bats_both, "両打ち" %>
        </div>
      </div>
    </div>
    <%# ポジション %>
    <div class="h4 pb-2 mb-2 text-primary border-bottom border-primary">
      ポジション
    </div>
    <%# メイン %>
    <div class="mb-3">
      <%= f.label :main_position, "メインポジション", class: "form-label" %><span class="badge bg-danger ms-1">必須</span>
      <%= f.select :main_position, [["先発", 10], ["中継ぎ", 11], ["抑え", 12], ["捕手", 2], ["一塁手", 3], ["二塁手", 4], ["三塁手", 5], ["遊撃手", 6], ["外野手", 7]], {include_blank: "選択して下さい"}, {class: "form-select"} %>
    </div>
    <%# サブ %>
    <div class="mb-3">
      <label class="form-label">サブポジション</label>
      <%# FIXME: メインポジションで選択しているポジションは、自動で3を入力 %>
      <%# 投手 %>
      <div class="row">
        <div class="col-4">
          <%= f.label :p12_proper, "先発", class: "form-label small" %>
          <%= f.number_field :p11_proper, class: "form-control", min: 0, max: 3 %>
        </div>
        <div class="col-4">
          <%= f.label :p13_proper, "中継ぎ", class: "form-label small" %>
          <%= f.number_field :p11_proper, class: "form-control", min: 0, max: 3 %>
        </div>
        <div class="col-4">
          <%= f.label :p13_proper, "抑え", class: "form-label small" %>
          <%= f.number_field :p11_proper, class: "form-control", min: 0, max: 3 %>
        </div>
      </div>
      <%# 野手 %>
      <div class="row">
        <div class="col">
          <%= f.label :p2_proper, "捕手", class: "form-label small" %>
          <%= f.number_field :p2_proper, class: "form-control", min: 0, max: 3 %>
        </div>
        <div class="col">
          <%= f.label :p3_proper, "一塁手", class: "form-label small" %>
          <%= f.number_field :p3_proper, class: "form-control", min: 0, max: 3 %>
        </div>
        <div class="col">
          <%= f.label :p4_proper, "二塁手", class: "form-label small" %>
          <%= f.number_field :p4_proper, class: "form-control", min: 0, max: 3 %>
        </div>
        <div class="col">
          <%= f.label :p5_proper, "三塁手", class: "form-label small" %>
          <%= f.number_field :p5_proper, class: "form-control", min: 0, max: 3 %>
        </div>
        <div class="col">
          <%= f.label :p6_proper, "遊撃手", class: "form-label small" %>
          <%= f.number_field :p6_proper, class: "form-control", min: 0, max: 3 %>
        </div>
        <div class="col">
          <%= f.label :p7_proper, "外野手", class: "form-label small" %>
          <%= f.number_field :p7_proper, class: "form-control", min: 0, max: 3 %>
        </div>
      </div>
    </div>
    <%# 共通特殊能力 %>
    <div class="h4 pb-2 mb-2 text-primary border-bottom border-primary">
      共通特殊能力
    </div>
    <div class="mb-3">
      <div class="row mb-2">
        <div class="col row">
          <div class="col-4 d-flex align-items-center">
            <%# TODO: アイコンつけて、注意文言を表示「金特「ガソリンタンク」は投手にのみ影響します。」 %>
            <%= f.label :kaifuku, "回復", class: "form-label small mb-0" %>
          </div>
          <div class="col-8">
            <%= f.select :kaifuku,
              options_for_select([
                  ["ガソリンタンク", 4, {class: "pawa-bg-sa-sp2"}],
                  ["A", 3, {class: "pawa-bg-sa-g2"}],
                  ["B", 2, {class: "pawa-bg-sa-g2"}],
                  ["C", 1, {class: "bg-white"}],
                  ["D", 0, {class: "bg-white"}],
                  ["E", -1, {class: "bg-white"}],
                  ["F", -2, {class: "pawa-bg-sa-b2"}],
                  ["G", -3, {class: "pawa-bg-sa-b2"}]
              ], @player.new_record? ? 0 : @player.kaifuku),
              {},
              { class: "form-select", id: "kaifuku-select" } %>
          </div>
        </div>
        <div class="col row">
          <div class="col-4 d-flex align-items-center">
            <%= f.label :kegasinikusa, "ケガしにくさ", class: "form-label small mb-0" %>
          </div>
          <div class="col-8">
            <%= f.select :kegasinikusa,
              options_for_select([
                  ["鉄人", 4, {class: "pawa-bg-sa-sp2"}],
                  ["A", 3, {class: "pawa-bg-sa-g2"}],
                  ["B", 2, {class: "pawa-bg-sa-g2"}],
                  ["C", 1, {class: "bg-white"}],
                  ["D", 0, {class: "bg-white"}],
                  ["E", -1, {class: "bg-white"}],
                  ["F", -2, {class: "pawa-bg-sa-b2"}],
                  ["G", -3, {class: "pawa-bg-sa-b2"}]
              ], @player.new_record? ? 0 : @player.kegasinikusa),
              {},
              { class: "form-select", id: "kegasinikusa-select" } %>
          </div>
        </div>
        <div class="col row"></div>
      </div>
      <%# １行目 %>
      <div class="row">
        <div class="col">
          <div class="form-check">
            <%= f.check_box :other_special_abilities, { multiple: true, class: "form-check-input pawa-checkbox-g", id: "tubamekiller" }, "ツバメキラー", nil %>
