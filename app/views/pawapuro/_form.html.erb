    <%= f.fields_for :pawapuro_pitcher do |pitcher_f| %>
      <%# 投手基本能力 %>
      <div class="h4 pb-2 mb-2 text-primary border-bottom border-primary">
        投手基本能力
      </div>
      <div class="mb-3">
        <%# 基本能力 %>
        <div class="mb-3">
          <div class="row">
            <div class="col-4">
              <%= pitcher_f.label :pace, "球速", class: "form-label" %>
              <div class="input-group">
                <%= pitcher_f.number_field :pace, class: "form-control", min: 120, max: 170 %>
                <span class="input-group-text">km/h</span>
              </div>
            </div>
            <div class="col-4">
              <%= pitcher_f.label :control, "コントロール", class: "form-label" %>
              <div class="input-group">
                <%= pitcher_f.number_field :control, class: "form-control", id:"control-input", min: 1, max: 100 %>
                <span class="input-group-text text-white pawa-bg-g" id="control-alphabet-display">G</span>
              </div>
            </div>
            <div class="col-4">
              <%= pitcher_f.label :stamina, "スタミナ", class: "form-label" %>
              <div class="input-group">
                <%= pitcher_f.number_field :stamina, class: "form-control", id:"stamina-input", min: 1, max: 100 %>
                <span class="input-group-text text-white pawa-bg-g" id="stamina-alphabet-display">G</span>
              </div>
            </div>
          </div>
        </div>
        <%# 変化球 %>
        <div>
          <%# ストレート系 %>
          <div class="row mb-2">
            <%# 第一 %>
            <div class="col-1 d-flex align-items-center">
              <label class="form-label small mb-0">ストレート系</label>
            </div>
            <div class="col-5">
              <%# TODO: オリジナルを選択時、球種名入力欄を表示 %>
              <%= pitcher_f.select :fastball_type, [['ストレート', 'ストレート'], ['オリジナル', 'オリジナル']], { selected: @player.pawapuro_pitcher.fastball_type }, { class: 'form-select' } %>
            </div>
            <%# 第二 %>
            <div class="col-1 d-flex align-items-center">
              <label class="form-label small mb-0">第二ストレート系</label>
            </div>
            <div class="col-5">
              <%= pitcher_f.select :second_fastball_type, [['なし', 'なし'], ['ツーシームファースト', 'ツーシームファースト'], ['ムービングファースト', 'ムービングファースト'], ['超スローボール', '超スローボール'], ['オリジナル', 'オリジナル']], { selected: @player.pawapuro_pitcher.second_fastball_type }, { class: 'form-select' } %>
            </div>
          </div>
          <%# スライダー系 %>
          <div class="row mb-2">
            <%# 第一 %>
            <div class="col-1 d-flex align-items-center">
              <label class="form-label small mb-0">スライダー系</label>
            </div>
            <div class="col-4">
              <%= pitcher_f.select :slider_type_pitch, [['なし', ''], ['スライダー', 'スライダー'], ['Hスライダー', 'Hスライダー'], ['カットボール', 'カットボール'], ['オリジナル', 'オリジナル']], { selected: @player.pawapuro_pitcher.slider_type_pitch }, { class: 'form-select' } %>
            </div>
            <%# FIXME: なしが選ばれたときは、非活性にする %>
            <div class="col-1">
              <%= pitcher_f.number_field :slider_type_movement, class: 'form-control', min: 0, max: 7 %>
            </div>
            <%# 第二 %>
            <div class="col-1 d-flex align-items-center">
              <label class="form-label small mb-0">第二スライダー系</label>
            </div>
            <div class="col-4">
              <%= pitcher_f.select :second_slider_type_pitch, [['なし', ''], ['スライダー', 'スライダー'], ['Hスライダー', 'Hスライダー'], ['カットボール', 'カットボール'], ['オリジナル', 'オリジナル']], { selected: @player.pawapuro_pitcher.second_slider_type_pitch }, { class: 'form-select' } %>
            </div>
            <div class="col-1">
              <%= pitcher_f.number_field :second_slider_type_movement, class: 'form-control', min: 0, max: 7 %>
            </div>
          </div>
          <%# カーブ系 %>
          <div class="row mb-2">
            <%# 第一 %>
            <div class="col-1 d-flex align-items-center">
              <label class="form-label small mb-0">カーブ系</label>
            </div>
            <div class="col-4">
              <%= pitcher_f.select :curveball_type_pitch, [['なし', ''], ['カーブ', 'カーブ'], ['スローカーブ', 'スローカーブ'], ['ドロップ', 'ドロップ'], ['ドロップカーブ', 'ドロップカーブ'], ['スラーブ', 'スラーブ'], ['ナックルカーブ', 'ナックルカーブ'], ['パワーカーブ', 'パワーカーブ'], ['オリジナル', 'オリジナル']], { selected: @player.pawapuro_pitcher.curveball_type_pitch }, { class: 'form-select' } %>
            </div>
            <div class="col-1">
              <%= pitcher_f.number_field :curveball_type_movement, class: 'form-control', min: 0, max: 7 %>
            </div>
            <%# 第二 %>
            <div class="col-1 d-flex align-items-center">
              <label class="form-label small mb-0">第二カーブ系</label>
            </div>
            <div class="col-4">
              <%= pitcher_f.select :second_curveball_type_pitch, [['なし', ''], ['カーブ', 'カーブ'], ['スローカーブ', 'スローカーブ'], ['ドロップ', 'ドロップ'], ['ドロップカーブ', 'ドロップカーブ'], ['スラーブ', 'スラーブ'], ['ナックルカーブ', 'ナックルカーブ'], ['パワーカーブ', 'パワーカーブ'], ['オリジナル', 'オリジナル']], { selected: @player.pawapuro_pitcher.second_curveball_type_pitch }, { class: 'form-select' } %>
            </div>
            <div class="col-1">
              <%= pitcher_f.number_field :second_curveball_type_movement, class: 'form-control', min: 0, max: 7 %>
            </div>
          </div>
          <%# シュート系 %>
          <div class="row mb-2">
            <%# 第一 %>
            <div class="col-1 d-flex align-items-center">
              <label class="form-label small mb-0">シュート系</label>
            </div>
            <div class="col-4">
              <%= pitcher_f.select :shootball_type_pitch, [['なし', ''], ['シュート', 'シュート'], ['Hシュート', 'Hシュート'], ['シンキングツーシーム', 'シンキングツーシーム'], ['オリジナル', 'オリジナル']], { selected: @player.pawapuro_pitcher.shootball_type_pitch }, { class: 'form-select' } %>
            </div>
            <div class="col-1">
              <%= pitcher_f.number_field :shootball_type_movement, class: 'form-control', min: 0, max: 7 %>
            </div>
            <%# 第二 %>
            <div class="col-1 d-flex align-items-center">
              <label class="form-label small mb-0">第二シュート系</label>
            </div>
            <div class="col-4">
              <%= pitcher_f.select :second_shootball_type_pitch, [['なし', ''], ['シュート', 'シュート'], ['Hシュート', 'Hシュート'], ['シンキングツーシーム', 'シンキングツーシーム'], ['オリジナル', 'オリジナル']], { selected: @player.pawapuro_pitcher.second_shootball_type_pitch }, { class: 'form-select' } %>
            </div>
            <div class="col-1">
              <%= pitcher_f.number_field :second_shootball_type_movement, class: 'form-control', min: 0, max: 7 %>
            </div>
          </div>
          <%# シンカー系 %>
          <div class="row mb-2">
            <%# 第一 %>
            <div class="col-1 d-flex align-items-center">
              <label class="form-label small mb-0">シンカー系</label>
            </div>
            <div class="col-4">
              <%= pitcher_f.select :sinker_type_pitch, [['なし', ''], ['シンカー', 'シンカー'], ['Hシンカー', 'Hシンカー'], ['サークルチェンジ', 'サークルチェンジ'], ['オリジナル', 'オリジナル']], { selected: @player.pawapuro_pitcher.sinker_type_pitch }, { class: 'form-select' } %>
            </div>
            <div class="col-1">
              <%= pitcher_f.number_field :sinker_type_movement, class: 'form-control', min: 0, max: 7 %>
            </div>
            <%# 第二 %>
            <div class="col-1 d-flex align-items-center">
              <label class="form-label small mb-0">第二シンカー系</label>
