              <label class="form-label small mb-0">カーブ系</label>
            </div>
            <div class="col-4">
              <%= pitcher_f.select :curveball_type_pitch, [['なし', ''], ['カーブ', 'カーブ'], ['スローカーブ', 'スローカーブ'], ['ドロップ', 'ドロップ'], ['ドロップカーブ', 'ドロップカーブ'], ['スラーブ', 'スラーブ'], ['ナックルカーブ', 'ナックルカーブ'], ['パワーカーブ', 'パワーカーブ'], ['オリジナル', 'オリジナル']], { selected: @player.pawapuro_pitcher.curveball_type_pitch }, { class: 'form-select' } %>
            </div>
