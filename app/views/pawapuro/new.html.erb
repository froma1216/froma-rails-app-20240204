<div class="container">
  <h1>パワプロ：選手新規作成</h1>
  <%# NOTE: https://qiita.com/snskOgata/items/44d32a06045e6a52d11c %>
  <%= form_with model: @player, url: pawapuro_index_path, local: true do |f| %>
    <form class="mb-3">
      <%# プロフィール %>
      <div class="h4 pb-2 mb-2 text-primary border-bottom border-primary">
        プロフィール
      </div>
      <div class="row">
        <%# 名字 %>
        <div class="col-6">
          <%= f.label :last_name, "姓", class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control", placeholder: "佐藤", autocomplete: "name" %>
        </div>
        <%# 名前 %>
        <div class="col-6">
          <%= f.label :first_name, "名", class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control", placeholder: "太郎", autocomplete: "name" %>
        </div>
      </div>
      <%# 選手名 %>
      <div>
        <%= f.label :player_name, "選手名", class: "form-label" %>
        <%= f.text_field :player_name, class: "form-control", placeholder: "佐藤太", autocomplete: "name" %>
      </div>
      <div class="row">
        <%# 背ネーム %>
        <div class="col-6">
          <%= f.label :back_name, "背ネーム", class: "form-label" %>
          <%= f.text_field :back_name, class: "form-control", placeholder: "SATO", autocomplete: "name" %>
        </div>
        <%# 生年月日 %>
        <div class="col-6">
          <%= f.label :birthday, "生年月日", class: "pt-2 pr-2" %>
          <%= f.date_field :birthday, class: "form-control" %>
        </div>
      </div>
      <%# 投打 %>
      <div>
        <%= f.label :throws, "投打", class: "form-label" %>
        <div class="mb-3">
          <div class="form-check form-check-inline">
            <%= f.radio_button :throws, "right", class: "form-check-input", checked: true %>
            <%= f.label :throws_right, "右投げ" %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :throws, "left", class: "form-check-input" %>
            <%= f.label :throws_left, "左投げ" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="form-check form-check-inline">
            <%= f.radio_button :bats, "right", class: "form-check-input", checked: true %>
            <%= f.label :bats_right, "右打ち" %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :bats, "left", class: "form-check-input" %>
            <%= f.label :bats_left, "左打ち" %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :bats, "both", class: "form-check-input" %>
            <%= f.label :bats_both, "両打ち" %>
          </div>
        </div>
      </div>
      <%# ポジション %>
      <div class="h4 pb-2 mb-2 text-primary border-bottom border-primary">
        ポジション
      </div>
      <%# メイン %>
      <div class="mb-3">
        <%= f.label :main_position, "メインポジション", class: "form-label" %>
        <%= f.select :main_position, [["先発", 10], ["中継ぎ", 11], ["抑え", 12], ["捕手", 2], ["一塁手", 3], ["二塁手", 4], ["三塁手", 5], ["遊撃手", 6], ["外野手", 7]], {include_blank: "選択して下さい"}, {class: "form-select"} %>
      </div>
      <%# サブ %>
      <div class="mb-3">
        <label class="form-label">サブポジション</label>
        <%# FIXME: メインポジションで選択しているポジションは、自動で3を入力 %>
        <%# 投手 %>
        <%= f.fields_for :pawapuro_pitcher do |pitcher_f| %>
          <div class="row">
            <div class="col-4">
              <%= pitcher_f.label :starter_proper, "先発", class: "form-label small" %>
              <%= pitcher_f.number_field :starter_proper, class: "form-control", value: 0, min: 0, max: 3 %>
            </div>
            <div class="col-4">
              <%= pitcher_f.label :reliever_proper, "中継ぎ", class: "form-label small" %>
              <%= pitcher_f.number_field :reliever_proper, class: "form-control", value: 0, min: 0, max: 3 %>
            </div>
            <div class="col-4">
              <%= pitcher_f.label :closer_proper, "抑え", class: "form-label small" %>
              <%= pitcher_f.number_field :closer_proper, class: "form-control", value: 0, min: 0, max: 3 %>
            </div>
          </div>
        <% end %>
        <%# 野手 %>
        <div class="row">
          <div class="col">
            <%= f.label :sub_position_2, "捕手", class: "form-label small" %>
            <%= f.number_field :sub_position_2, class: "form-control", value: 0, min: 0, max: 3 %>
          </div>
          <div class="col">
            <%= f.label :sub_position_3, "一塁手", class: "form-label small" %>
            <%= f.number_field :sub_position_3, class: "form-control", value: 0, min: 0, max: 3 %>
          </div>
          <div class="col">
            <%= f.label :sub_position_4, "二塁手", class: "form-label small" %>
            <%= f.number_field :sub_position_4, class: "form-control", value: 0, min: 0, max: 3 %>
          </div>
          <div class="col">
            <%= f.label :sub_position_5, "三塁手", class: "form-label small" %>
            <%= f.number_field :sub_position_5, class: "form-control", value: 0, min: 0, max: 3 %>
          </div>
          <div class="col">
            <%= f.label :sub_position_6, "遊撃手", class: "form-label small" %>
            <%= f.number_field :sub_position_6, class: "form-control", value: 0, min: 0, max: 3 %>
          </div>
          <div class="col">
            <%= f.label :sub_position_7, "外野手", class: "form-label small" %>
            <%= f.number_field :sub_position_7, class: "form-control", value: 0, min: 0, max: 3 %>
          </div>
        </div>
