<!-- PC -->
<% breaking_ball_types_pc.each do |type| %>
  <%= render partial: 'basic_ability_table_box', locals: {
    label: content_tag(:i, "", class: "fa fa-solid fa-arrow-down", style: "transform: rotate(#{type[:rotation]}deg);"),
    ability_value: player.breaking_ball_movement(type[:division], 1) || 0,
    ability_value2: player.breaking_ball_movement(type[:division], 2),
    width: "w-10 d-none d-sm-block"
  } %>
<% end %>
<!-- モバイル -->
<% breaking_ball_types_mobile.each do |type| %>
  <%= render partial: 'basic_ability_table_box', locals: {
    label: content_tag(:i, "", class: "fa fa-solid fa-arrow-down", style: "transform: rotate(#{type[:rotation]}deg);"),
    ability_value: player.breaking_ball_movement(type[:division], 1) || 0,
    ability_value2: player.breaking_ball_movement(type[:division], 2),
    width: "w-30 d-block d-sm-none"
  } %>
<% end %>
